{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ESNext", "DOM"],
    "module": "CommonJS",
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "types": ["node"],
  },
  "include": [
    "lib/*.ts",
    "lib/pure/*.ts",
  ]
}
