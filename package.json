{
  "name": "firebase-notification-microservice",
  "version": "1.0.1",
  "description": "Microservicio robusto para notificaciones Firebase con dashboard y tracking en tiempo real",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "dev:verbose": "NODE_ENV=development DEBUG=* nodemon app.js",
    "setup": "node scripts/setup.js",
    "setup:dev": "NODE_ENV=development node scripts/setup.js",
    "test": "node scripts/test-endpoints.js",
    "test:api": "node scripts/test-api.js",
    "test:health": "curl -s http://localhost:3000/health | jq",
    "build": "npm run test && echo 'Build completed'",
    "lint": "echo 'Linting skipped for now'",
    "format": "echo 'Formatting skipped for now'",
    "db:init": "node scripts/init-database.js",
    "db:reset": "node scripts/reset-database.js",
    "db:backup": "node scripts/backup-database.js",
    "docker:build": "docker build -t firebase-microservice .",
    "docker:run": "docker run -p 3000:3000 -e NODE_ENV=development firebase-microservice",
    "logs": "tail -f logs/app.log || echo 'No logs file found'",
    "health": "curl -s http://localhost:3000/health || echo 'Service not responding'",
    "check:deps": "npm audit --audit-level=moderate",
    "check:endpoints": "node scripts/check-endpoints.js",
    "demo": "node scripts/demo.js",
    "clean": "rm -rf logs/* data/*.db node_modules/.cache",
    "reinstall": "rm -rf node_modules package-lock.json && npm install"
  },
  "keywords": [
    "firebase",
    "fcm",
    "notifications",
    "push",
    "microservice",
    "oracle",
    "plsql",
    "websockets",
    "real-time",
    "tracking",
    "dashboard",
    "robust",
    "sqlite"
  ],
  "author": "Tu Empresa",
  "license": "MIT",
  "dependencies": {
    "async": "^3.2.5",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "google-auth-library": "^9.4.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "node-cron": "^4.2.1",
    "socket.io": "^4.7.4",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tu-empresa/firebase-microservice.git"
  },
  "bugs": {
    "url": "https://github.com/tu-empresa/firebase-microservice/issues"
  },
  "homepage": "https://github.com/tu-empresa/firebase-microservice#readme",
  "nodemonConfig": {
    "ignore": [
      "node_modules",
      "logs",
      "*.db",
      "public",
      "data",
      "backup"
    ],
    "ext": "js,json",
    "env": {
      "NODE_ENV": "development"
    }
  }
}
