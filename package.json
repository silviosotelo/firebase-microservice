{
  "name": "firebase-notification-microservice",
  "version": "1.0.0",
  "description": "Microservicio modular para notificaciones Firebase con dashboard y tracking en tiempo real",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "debug": "node debug-listeners.js",
    "debug-verbose": "NODE_ENV=development node --trace-warnings debug-listeners.js",
    "setup": "npm install && node scripts/setup.js",
    "build": "npm run test && echo 'Build completed'",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write 'src/**/*.js'",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "node scripts/reset-db.js",
    "docker:build": "docker build -t firebase-microservice .",
    "docker:run": "docker run -p 3000:3000 firebase-microservice",
    "docker:compose": "docker-compose up -d",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop firebase-microservice",
    "pm2:restart": "pm2 restart firebase-microservice",
    "pm2:logs": "pm2 logs firebase-microservice --lines 100",
    "pm2:status": "pm2 status",
    "logs": "tail -f logs/app.log",
    "health": "curl http://localhost:3000/health",
    "load-test": "artillery run tests/load-test.yml",
    "docs:generate": "node scripts/generate-docs.js"
  },
  "keywords": [
    "firebase",
    "fcm",
    "notifications",
    "push",
    "microservice",
    "oracle",
    "plsql",
    "websockets",
    "real-time",
    "tracking",
    "dashboard"
  ],
  "author": "Tu Empresa",
  "license": "MIT",
  "dependencies": {
    "async": "^3.2.5",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^12.2.0",
    "bull": "^4.12.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-prometheus-middleware": "^1.2.0",
    "express-rate-limit": "^7.1.5",
    "google-auth-library": "^9.4.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.44",
    "multer": "^1.4.5-lts.1",
    "prom-client": "^13.0.0",
    "rate-limiter-flexible": "^4.0.1",
    "sharp": "^0.32.6",
    "socket.io": "^4.7.4",
    "sqlite3": "^5.1.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "artillery": "^2.0.3",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "nyc": "^15.1.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tu-empresa/firebase-microservice.git"
  },
  "bugs": {
    "url": "https://github.com/tu-empresa/firebase-microservice/issues"
  },
  "homepage": "https://github.com/tu-empresa/firebase-microservice#readme",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/database.js",
      "!src/utils/logger.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules",
      "logs",
      "*.db",
      "public"
    ],
    "ext": "js,json,html"
  }
}
